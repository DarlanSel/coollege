<!DOCTYPE html>
<html>
  <head>
    <title>Coollege</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to "Coollege", root_path, class: "navbar-brand" %>
        <% if current_school %>
          <%= link_to 'Teachers', school_teachers_path(current_school) %>
          <%= link_to 'Students', school_students_path(current_school) %>
          <%= link_to 'Grades', school_grades_path(current_school) %>
        <% end %>
        <div class="d-flex">
          <% if user_signed_in? %>
            <%= link_to 'Schools', schools_path, class: "navbar-brand" %>
            <%= link_to current_user.name, edit_user_registration_path, class: "navbar-brand" %>
            <%= link_to "Logout", destroy_user_session_path(current_user), method: :delete, class: "btn btn-danger" %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </nav>


    <div class="container">
      <% flash[:error]&.each do |error| %>
        <p><%= error %></p>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
