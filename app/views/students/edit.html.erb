<h1>Edit Student</h1>

<%= form_for @student, url: school_student_path(current_school, @student.personable.id) do |f| %>
  <div class row>
    <div class='col-3'>
      <div class='mb-3'>
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <label class="form-label" for="student_grade">Grade</label>
        <select name="student[grade_id]" id="student_grade_id">
          <% @grades.each do |grade| %>
            <% if @student.personable.grade == grade %>
              <option value='<%= grade.id %>' selected><%= grade.name %></option>
            <% else %>
              <option value='<%= grade.id %>'><%= grade.name %></option>
            <% end %>
          <% end %>
        </select>
      </div>

      <div class='text-end'>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
