<div class='row'>
  <h1 class='col-11'>Grades</h1>
  <%= link_to 'New Grade', new_school_grade_path(current_school), class: 'btn btn-primary col-1' %>
</div>

<table class='table table-stripped table-hover'>
  <thead>
    <tr>
      <th class='col-11'><%= Grade.human_attribute_name('Name') %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.name %></td>
        <td><%= link_to 'Edit', edit_school_grade_path(current_school, grade) %></td>
        <td><%= link_to 'Delete', school_grade_path(current_school, grade), method: :delete %></td>
      </tr>
    <% end %>

  </tbody>
</table>
