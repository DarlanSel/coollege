<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th><%= Person.human_attribute_name('name') %></th>
      <th><%= Person.human_attribute_name('user') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.user&.name || 'No user' %></td>
        <td><%= link_to 'Show', school_teacher_path(current_school, person) %></td>
        <td><%= link_to 'Edit', edit_school_teacher_path(current_school, person) %></td>
        <td><%= link_to 'Destroy', school_teacher_path(current_school, person), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_school_teacher_path(current_school) %>
